<odoo>
    <data>
        <record id="res_config_settings_view_form_crm_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.crm.config.parameters</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='crm_lead']" position="inside">
                    <br/>
                    <br/>
                    <div class="col-12 col-lg-6 o_setting_box" id="weighted_amount_setting">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="weighted_amount_perc" string="Set Weighted Amount Percentage"/>
                            <div class="text-muted">
                                Define your percentage calculation for weighted amount of an opportunity.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="weighted_amount_perc" class="o_light_label"/>
                                    <span>%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>