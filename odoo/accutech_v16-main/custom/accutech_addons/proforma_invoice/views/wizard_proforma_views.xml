<odoo>
    <record id="view_proforma_wizard_form" model="ir.ui.view">
        <field name="name">proforma.wizard.form</field>
        <field name="model">proforma.wizard</field>
        <field name="arch" type="xml">
            <form string="Proforma Invoice Wizard">
                <sheet>
                    <group>
                        <field name="proforma_percentage"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="confirm_proforma" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>