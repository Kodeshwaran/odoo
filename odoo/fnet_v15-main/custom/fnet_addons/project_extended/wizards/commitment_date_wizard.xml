<odoo>
    <data>
        <record id="view_commitment_date_wizard_form" model="ir.ui.view">
            <field name="name">view.commitment.date.wizard.form</field>
            <field name="model">commitment.date.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="commitment_date" placeholder="Enter Delivery Date"/>
                    </group>
                    <footer>
                        <button name="action_close" type="object" string="Update" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="view_reason_wizard_form" model="ir.ui.view">
            <field name="name">view.reason.wizard.form</field>
            <field name="model">reason.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="reject_reason" placeholder="Enter Reason"/>
                    </group>
                    <footer>
                        <button name="action_close" type="object" string="Update" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

    </data>
</odoo>