<odoo>
    <data>

        <record id="assign_manager_wizard_form" model="ir.ui.view">
            <field name="name">assign.manager.view.wizard.form</field>
            <field name="model">assign.manager.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <footer>
                        <button name="action_assign" type="object" string="Assign" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>