<odoo>
    <data>
        <record id="cond_approve_form" model="ir.ui.view">
            <field name="name">cond.approve.view.form</field>
            <field name="model">cond.approve</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reason"/>
                            <field name="cond_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object" class="oe_highlight" string="Confirm"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         <record id="reject_reason_form" model="ir.ui.view">
            <field name="name">reject.reason.view.form</field>
            <field name="model">reject.reason</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reject_reason"/>
                            <field name="reject_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object" class="oe_highlight" string="Confirm"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>